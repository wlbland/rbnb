<div class="container">

<%= form_tag cars_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a car"
  %>
<% end %>




  <div class="row">

  <% @cars&.each do |car| %>
    <div class="col-xs-12 col-sm-3">
      <%= link_to car_path(car) do  %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path car.photo, height: 300, width: 400, crop: :fill if car.photo.present? %>')">
          <div class="card-category">
            <%= car.make.upcase %>

          </div>
          <div class="card-description">

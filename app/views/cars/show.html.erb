


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url();">
  <div class="banner-content">
    <h1><%= @car.make %> <%= @car.model %></h1>
    <h2><%= @car.photos %></h2>
    <p>How amazing would it be to drive this beauty?</p>
    <%=link_to "Book now", bookings_path, class="btn btn-primary btn-lg"%>
  </div>
</div>


<% if current_user == @car.user %>
<%= link_to "edit", edit_car_path(@car), class: "btn btn-primary"  %>
<% end %>

